<Window x:Class="PLWPF.CHILD.ListOfChild"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF.CHILD"
        mc:Ignorable="d"
        Title="ListOfChild" Height="300" Width="571.693">
    <Grid Margin="0,0,2,0">
        <ListView Name="ListOfChilds" Height="230" Margin="0,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="560" RenderTransformOrigin="0.498,0.56">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="80" DisplayMemberBinding="{Binding FirstName}" />
                    <GridViewColumn Header="Mother ID" Width="100" DisplayMemberBinding="{Binding MotherId}" />
                    <GridViewColumn Header="ID" Width="60" DisplayMemberBinding="{Binding Id}" />
                    <GridViewColumn Header="Date Of Birth" Width="120" DisplayMemberBinding="{Binding Birthday}" />
                    <GridViewColumn Header="Special Need" Width="120" DisplayMemberBinding="{Binding SpecialNeeds}" />
                    <GridViewColumn Header="Details" Width="80" DisplayMemberBinding="{Binding InfoSpecialNeeds}" />

                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
